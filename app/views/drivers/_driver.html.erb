<p>
  <strong>Name:</strong>
  <%= @driver.name %>
</p>

<p>
  <strong>Contact Number:</strong>
  <%= @driver.contact_number_string %>
</p>

<p>
  <strong>Bus:</strong>
  <%= @driver.bus.plate_number %>
</p>

<% if @driver.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @driver.image %>
  </p>
<% end %>

